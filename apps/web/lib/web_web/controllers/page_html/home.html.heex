<div class="min-h-screen bg-slate-50 font-sans">
  <header class="bg-white px-8 py-4 shadow-sm flex justify-between items-center border-b border-slate-100">
    <div class="flex items-center gap-3">
      <div class="bg-amber-100 p-2 rounded-lg text-amber-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
      </div>
      <div>
        <h1 class="text-xl font-bold text-slate-800 leading-none">Procesador de Archivos</h1>
        <p class="text-sm text-slate-500">Sistema de procesamiento inteligente</p>
      </div>
    </div>

    <nav class="flex gap-4">
      <button class="bg-indigo-600 text-white px-4 py-1.5 rounded-full text-sm font-medium flex items-center gap-2">
        <span class="bg-indigo-400 w-5 h-5 rounded-full flex items-center justify-center text-[10px]">1</span> Configuraci√≥n
      </button>
      <button class="bg-slate-100 text-slate-400 px-4 py-1.5 rounded-full text-sm font-medium flex items-center gap-2 cursor-not-allowed">
        <span class="bg-slate-300 w-5 h-5 rounded-full flex items-center justify-center text-[10px] text-white">2</span> M√©tricas
      </button>
      <button class="bg-slate-100 text-slate-400 px-4 py-1.5 rounded-full text-sm font-medium flex items-center gap-2 cursor-not-allowed">
        <span class="bg-slate-300 w-5 h-5 rounded-full flex items-center justify-center text-[10px] text-white">3</span> Resultados
      </button>
    </nav>
  </header>

  <main class="p-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
    
    <section class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100">
      <h2 class="text-2xl font-bold text-slate-800 mb-1">Configuraci√≥n de Procesamiento</h2>
      <p class="text-slate-500 mb-8">Configure las opciones para procesar sus archivos</p>

      <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100">
        <div class="flex items-center gap-2 mb-4 text-amber-500 font-semibold">
           <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
           </svg>
           Selecci√≥n de Archivos
        </div>
        
        <.form :let={_f} for={%{}} action={~p"/upload"} multipart id="upload-form">
          <label class="group relative flex flex-col items-center justify-center w-full h-64 border-2 border-dashed border-indigo-200 bg-white rounded-2xl cursor-pointer hover:border-indigo-400 hover:bg-indigo-50/50 transition-all duration-300">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
              <div class="p-4 bg-indigo-50 rounded-full group-hover:scale-110 transition-transform duration-300 mb-4">
                <svg class="w-10 h-10 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
              </div>
              <p class="mb-2 text-sm text-slate-700 font-semibold">
                <span class="text-indigo-600 underline">Haz clic para cargar</span> o arrastra y suelta
              </p>
              <p class="text-xs text-slate-400 uppercase tracking-widest font-bold">CSV ‚Ä¢ XML ‚Ä¢ JSON</p>
            </div>
            <input type="file" name="archivos[]" id="file-input" multiple class="hidden" />
          </label>
        </.form>

        <div class="mt-6 flex justify-end">
          <button type="submit" form="upload-form" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-xl font-bold transition-all shadow-lg shadow-indigo-200">
            Procesar Archivos
          </button>
        </div>
      </div>
    </section>

    <section class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100 h-fit">
      <h2 class="text-2xl font-bold text-slate-800 mb-1">Vista Previa</h2>
      <p class="text-slate-500 mb-8">Resumen de la carga actual</p>

      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="bg-slate-50 p-4 rounded-xl border border-slate-100">
          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Archivos</p>
          <p id="count-display" class="text-2xl font-bold text-slate-800">0</p>
        </div>
        <div class="bg-indigo-50 p-4 rounded-xl border border-indigo-100">
          <p class="text-[10px] font-bold text-indigo-400 uppercase tracking-wider">Tama√±o Total</p>
          <p id="size-display" class="text-2xl font-bold text-indigo-600">0.00 MB</p>
        </div>
      </div>

      <div class="bg-white rounded-xl border border-slate-200 p-5">
        <div class="flex justify-between items-center mb-4 border-b border-slate-100 pb-2">
          <h3 class="font-bold text-sm text-slate-800 uppercase tracking-tighter">Archivos Seleccionados</h3>
          <span id="badge-count" class="bg-indigo-100 text-indigo-600 text-[10px] px-2 py-0.5 rounded-full font-bold">0</span>
        </div>
        
        <div id="file-list-container" class="space-y-2 max-h-64 overflow-y-auto pr-2">
          <div class="flex flex-col items-center py-8 justify-center text-slate-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mb-2 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <p class="text-xs italic">Ning√∫n archivo seleccionado a√∫n</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>

<script>
  // DOM element selection using English variable names
  const fileInput = document.getElementById('file-input');
  const fileListContainer = document.getElementById('file-list-container');
  const countDisplay = document.getElementById('count-display');
  const sizeDisplay = document.getElementById('size-display');
  const badgeCount = document.getElementById('badge-count');

  if (fileInput) {
    // Listener to react when the user selects files
    fileInput.addEventListener('change', function(event) {
      const selectedFiles = event.target.files;
      
      if (selectedFiles.length > 0) {
        let accumulatedSize = 0;
        let listHtml = "";

        // Iterate through FileList to build the UI elements
        Array.from(selectedFiles).forEach(currentFile => {
          accumulatedSize += currentFile.size;
          
          // Format individual size to KB for readability
          const fileSizeInKB = (currentFile.size / 1024).toFixed(1);

          listHtml += `
            <div class="flex items-center justify-between gap-2 text-sm text-slate-600 py-2 px-3 bg-slate-50 rounded-lg border border-white shadow-sm">
              <div class="flex items-center gap-2 overflow-hidden">
                <span class="text-indigo-400 text-lg">üìÑ</span>
                <span class="truncate font-medium">${currentFile.name}</span>
              </div>
              <span class="text-[10px] font-mono bg-white px-2 py-0.5 rounded border border-slate-200 text-slate-400">
                ${fileSizeInKB} KB
              </span>
            </div>
          `;
        });

        // Update UI counters and list
        fileListContainer.innerHTML = listHtml;
        countDisplay.innerText = selectedFiles.length;
        badgeCount.innerText = selectedFiles.length;
        
        // Calculate and show total size in MB
        const sizeInMB = (accumulatedSize / (1024 * 1024)).toFixed(2);
        sizeDisplay.innerText = `${sizeInMB} MB`;
      } else {
        // Reset to initial empty state if selection is cleared
        fileListContainer.innerHTML = `
          <div class="flex flex-col items-center py-8 justify-center text-slate-300">
            <p class="text-xs italic">Ning√∫n archivo seleccionado a√∫n</p>
          </div>
        `;
        countDisplay.innerText = "0";
        badgeCount.innerText = "0";
        sizeDisplay.innerText = "0.00 MB";
      }
    });
  }
</script>